{
  "name": "Chrome WebRTC Desktop Capture",
  "description": "Chrome WebRTC Desktop Capture",
  "version": "1",
  "manifest_version": 2,
  "icons": {
    "16": "icon.png",
    "128": "icon.png"
  },
  "background": {
      "persistent": true,
	  "page": "background.html"
   },
   
  "browser_action": {
      "default_icon": {
         "19": "icon.png",
         "38": "icon.png"
      },
      "default_popup": "popup.html",
      "default_title": ""
   },
   
  "permissions": [
    "desktopCapture"
  ]
}
